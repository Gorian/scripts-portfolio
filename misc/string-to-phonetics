#!/usr/bin/env bash
#
# Converts a string to a "phonetic alphabet"
# Gorian

string=$1
list=$(echo "$string" | sed 's/\(.\)/\1\n/g')
list=$(echo "$list" | tac)
new_string=;
for i in $list;do
  word=;
	case $i in
		'a')
			word='alpha';
			;;
		'b')
			word='bravo';
			;;
		'c')
			word='charlie';
			;;
		'd')
			word='delta';
			;;
		'e')
			word='echo';
			;;
		'f')
			word='foxtrot';
			;;
		'g')
			word='golf';
			;;
		'h')
			word='hotel';
			;;
		'i')
			word='india';
			;;
		'j')
			word='juliet';
			;;
		'k')
			word='kilo';
			;;
		'l')
			word='lima';
			;;
		'm')
			word='mike';
			;;
		'n')
			word='november';
			;;
		'o')
			word='oscar';
			;;
		'p')
			word='papa';
			;;
		'q')
			word='quebec';
			;;
		'r')
			word='romeo';
			;;
		's')
			word='sierra';
			;;
		't')
			word='tango';
			;;
		'u')
			word='uniform';
			;;
		'v')
			word='victor';
			;;
		'w')
			word='whiskey';
			;;
		'x')
			word='x-ray';
			;;
		'y')
			word='yankee';
			;;
		'z')
			word='zulu';
			;;
		'A')
			word='ALPHA';
			;;
		'B')
			word='BRAVO';
			;;
		'C')
			word='CHARLIE';
			;;
		'D')
			word='DELTA';
			;;
		'E')
			word='ECHO';
			;;
		'F')
			word='FOXTROT';
			;;
		'G')
			word='GOLF';
			;;
		'H')
			word='HOTEL';
			;;
		'I')
			word='INDIA';
			;;
		'J')
			word='JULIET';
			;;
		'K')
			word='KILO';
			;;
		'L')
			word='LIMA';
			;;
		'M')
			word='MIKE';
			;;
		'N')
			word='NOVEMBER';
			;;
		'O')
			word='OSCAR';
			;;
		'P')
			word='PAPA';
			;;
		'Q')
			word='QUEBEC';
			;;
		'R')
			word='ROMEO';
			;;
		'S')
			word='SIERRA';
			;;
		'T')
			word='TANGO';
			;;
		'U')
			word='UNIFORM';
			;;
		'V')
			word='VICTOR';
			;;
		'W')
			word='WHISKEY';
			;;
		'X')
			word='X-RAY';
			;;
		'Y')
			word='YANKEE';
			;;
		'Z')
			word='ZULU';
			;;
		'1')
			word='one';
			;;
		'2')
			word='two';
			;;
		'3')
			word='three';
			;;
		'4')
			word='four';
			;;
		'5')
			word='five';
			;;
		'6')
			word='six';
			;;
		'7')
			word='seven';
			;;
		'8')
			word='eight';
			;;
		'9')
			word='nine';
			;;
		'0')
			word='zero';
			;;
		'!')
			word='bang';
			;;
		'@')
			word='ampersat';
			;;
		'#')
			word='hash';
			;;
		'$')
			word='dollar-sign';
			;;
		'^')
			word='circumflex';
			;;
		'&')
			word='ampersand';
			;;
		'*')
			word='asterisk';
			;;
		'(')
			word='left-parenthesis';
			;;
		')')
			word='right-parenthesis';
			;;
		'[')
			word='right-bracket';
			;;
		']')
			word='left-bracket';
			;;
		'-')
			word='dash';
			;;
		'\\')
			word='backslash';
			;;
		'/')
			word='forward-slash';
			;;
	esac
	new_string="$word $new_string";
done
echo "$new_string"
